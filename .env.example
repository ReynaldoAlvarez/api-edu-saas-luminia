# =================================
# CONFIGURACIÓN DE BASE DE DATOS
# =================================
DATABASE_URL="postgresql://usuario:password@localhost:5432/educational_saas_db?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=educational_saas_db
DB_USER=usuario
DB_PASSWORD=password

# =================================
# CONFIGURACIÓN DEL SERVIDOR
# =================================
NODE_ENV=development
PORT=3000
API_VERSION=v1
API_PREFIX=/api

# =================================
# CONFIGURACIÓN DE SEGURIDAD
# =================================
JWT_SECRET=tu_jwt_secret_super_seguro_aqui
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=tu_refresh_secret_super_seguro_aqui
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# =================================
# CONFIGURACIÓN DE REDIS
# =================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =================================
# CONFIGURACIÓN DE CORS
# =================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# =================================
# CONFIGURACIÓN DE RATE LIMITING
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# =================================
# CONFIGURACIÓN DE ARCHIVOS
# =================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=./uploads

# =================================
# CONFIGURACIÓN DE EMAIL
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_app
EMAIL_FROM=noreply@tu-dominio.com

# =================================
# CONFIGURACIÓN DE PAGOS
# =================================
STRIPE_SECRET_KEY=sk_test_tu_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secret
PAYPAL_CLIENT_ID=tu_paypal_client_id
PAYPAL_CLIENT_SECRET=tu_paypal_client_secret
PAYPAL_MODE=sandbox

# =================================
# CONFIGURACIÓN DE IA
# =================================
OPENAI_API_KEY=sk-tu_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# =================================
# CONFIGURACIÓN DE NOTIFICACIONES
# =================================
ONESIGNAL_APP_ID=tu_onesignal_app_id
ONESIGNAL_REST_API_KEY=tu_onesignal_rest_api_key
FIREBASE_PROJECT_ID=tu_firebase_project_id

# =================================
# CONFIGURACIÓN DE ALMACENAMIENTO
# =================================
AWS_ACCESS_KEY_ID=tu_aws_access_key
AWS_SECRET_ACCESS_KEY=tu_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=tu-bucket-name

# =================================
# CONFIGURACIÓN DE MONITOREO
# =================================
SENTRY_DSN=https://tu_sentry_dsn
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# =================================
# CONFIGURACIÓN DE DESARROLLO
# =================================
SWAGGER_ENABLED=true
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=false